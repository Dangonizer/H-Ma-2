{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C/C++: Debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/${fileBasenameNoExtension}",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "miDebuggerArgs": "-x ${fileDirname}\\.vscode\\.gdbinit",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "logging": {
            "moduleLoad": false,
            "programOutput": false,
            "trace": false,
            "engineLogging": false
        },
        "preLaunchTask": "C/C++: Compile"
      }
    ]
  }
